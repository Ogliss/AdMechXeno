<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Humanoid Alien Races 2.0 -->
	<!-- Adds human subraces to GeneSeed Astartes notXenophobistTowards list-->
	<Operation Class="PatchOperationFindModID">
		<mods>
			<li>Ogliss.AliceTries.GeneSeed</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationConditional">
					<xpath>/Defs/AlienRace.ThingDef_AlienRace[@ParentName="AstarteAdaptusCore"]/alienRace/generalSettings/notXenophobistTowards</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/AlienRace.ThingDef_AlienRace[@ParentName="AstarteAdaptusCore"]/alienRace/generalSettings</xpath>
							<value>	
								<notXenophobistTowards></notXenophobistTowards>
							</value>
					</nomatch>	
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/AlienRace.ThingDef_AlienRace[@ParentName="AstarteAdaptusCore"]/alienRace/generalSettings/notXenophobistTowards</xpath>
					<value>
						<li>OG_Human_Mechanicus</li>
						<li>OG_Abhuman_Ogryn</li>
						<li>OG_Abhuman_Ratlin</li>
						<li>OG_Abhuman_Beastman</li>
						<li MayRequire="Ogliss.AdMech.Astartes">OG_Human_Astartes</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	 
</Patch>
