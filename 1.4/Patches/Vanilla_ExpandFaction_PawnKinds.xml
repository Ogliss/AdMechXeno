<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Pirate Faction Expansion: Adds additional Pirate units -->
	<Operation Class="PatchOperationOptional">
		<patchName>VanillaDaemonicPiratePawnkinds</patchName>
		<label>Daemonic Pirate Pawnkinds</label>
		<toolTip>Add daemonic Pawnkinds to vanilla Pirate factions</toolTip>
		<log>true</log>
		<enabled Class="PatchOperationSequence">		
			<operations>		
				<!-- Pirate Faction Expansion: Adds 40k weapon versions -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/FactionDef[defName = "Pirate"]/pawnGroupMakers/li[kindDef="Combat"]/options</xpath>
					<value>
						<OG_Chaos_Deamon_Lessar_Horror_Blue>3</OG_Chaos_Deamon_Lessar_Horror_Blue>
						<OG_Chaos_Deamon_Lessar_Horror_Pink>2</OG_Chaos_Deamon_Lessar_Horror_Pink>
						<OG_Chaos_Deamon_Flamer>2</OG_Chaos_Deamon_Flamer>
						<OG_Chaos_Deamon_Flamer_Exalted>1</OG_Chaos_Deamon_Flamer_Exalted>
						<OG_Chaos_Deamon_Lessar_Nurgling>4</OG_Chaos_Deamon_Lessar_Nurgling>
						<OG_Chaos_Deamon_Lessar_Horror_Brimstone>4</OG_Chaos_Deamon_Lessar_Horror_Brimstone>
						<OG_Chaos_Deamon_Plague_Bearer>2</OG_Chaos_Deamon_Plague_Bearer>
						<OG_Chaos_Deamon_Lessar_Deamonette>2</OG_Chaos_Deamon_Lessar_Deamonette>
						<OG_Chaos_Deamon_Lessar_Screamer>3</OG_Chaos_Deamon_Lessar_Screamer>
					</value>
				</li>
			</operations>	
		</enabled>	
	</Operation>
</Patch>
