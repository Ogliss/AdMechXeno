<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!--========== Basic leathers ============-->

  <ThingDef ParentName="LeatherBase">
    <defName>Leather_Tau</defName>
    <label>tauskin</label>
    <description>Tanned, dried, scraped tau skin. While a decent leather, it neither protects nor insulates particularly well.</description>
    <graphicData>
      <color>(211,194,143)</color>
    </graphicData>
    <statBases>
      <MarketValue>1.9</MarketValue>
      <StuffPower_Armor_Sharp>0.64</StuffPower_Armor_Sharp>
      <StuffPower_Insulation_Cold>12</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>12</StuffPower_Insulation_Heat>
    </statBases>
    <stuffProps>
      <color>(211,194,143)</color>
      <commonality>0.05</commonality>
    </stuffProps>
  </ThingDef>
  
  <ThingDef ParentName="LeatherBase">
    <defName>Leather_Kroot</defName>
    <label>kroot skin</label>
    <description>The tanned skin of a cold-blooded kroot. Krootskin is reasonably tough, but does not insulate well at all.</description>
    <statBases>
      <MarketValue>2.1</MarketValue>
      <StuffPower_Armor_Sharp>0.81</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.27</StuffPower_Armor_Blunt>
      <StuffPower_Insulation_Cold>12</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>12</StuffPower_Insulation_Heat>
    </statBases>
    <graphicData>
      <color>(0,107,58)</color>
    </graphicData>
    <stuffProps>
      <color>(0,107,58)</color>
      <commonality>0.075</commonality>
      <statFactors>
        <MaxHitPoints>1.0</MaxHitPoints>
      </statFactors>
    </stuffProps>
  </ThingDef>

  <ThingDef ParentName="LeatherBase">
    <defName>Leather_Vespid</defName>
    <label>Vespidhide</label>
    <description>Tanned, dried, scraped Vespid skin. Good at temperature regulation in hot climates.</description>
    <graphicData>
      <color>(204,180,150)</color>
    </graphicData>
    <statBases>
      <MarketValue>2.3</MarketValue>
      <StuffPower_Insulation_Heat>24</StuffPower_Insulation_Heat>
    </statBases>
    <stuffProps>
      <color>(204,180,150)</color>
      <commonality>0.05</commonality>
    </stuffProps>
  </ThingDef>

</Defs>
