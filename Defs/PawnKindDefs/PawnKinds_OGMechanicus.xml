<!-- bases --> 
  <PawnKindDef Name="MechanicusBase" Abstract="True">
    <defaultFactionType>MechanicusFaction</defaultFactionType>
    <backstoryCategory>Raider</backstoryCategory>
    <invNutrition>2.55</invNutrition>
		<aiAvoidCover>true</aiAvoidCover>
		<weaponMoney>
			<min>7500</min>
			<max>10000</max>
		</weaponMoney>
		<techHediffsMoney>
			<min>1000</min>
			<max>1500</max>
		</techHediffsMoney>
