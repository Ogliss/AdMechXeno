			<min>0</min>
			<max>2</max>
		</combatEnhancingDrugsCount>
		<techHediffsTags>
			<li>Advanced</li>
		</techHediffsTags>
    <inventoryOptions>
      <skipChance>0.9</skipChance>
      <subOptionsChooseOne>
        <li>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>30</min>
            <max>70</max>
          </countRange>
        </li>
        <li>
          <thingDef>Medicine</thingDef>
          <countRange>
            <min>1</min>
            <max>3</max>
          </countRange>
        </li>
        <li>
          <thingDef>Component</thingDef>
          <countRange>
            <min>0</min>
            <max>3</max>
          </countRange>
        </li>
        <li>
          <thingDef>PsychoidLeaves</thingDef>
          <countRange>
            <min>0</min>
            <max>3</max>
          </countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
  </PawnKindDef>

