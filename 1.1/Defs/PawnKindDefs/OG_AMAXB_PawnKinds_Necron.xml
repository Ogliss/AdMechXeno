<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!-- Necron Base Abstracts -->
  <PawnKindDef Name="BaseNecronKind" Abstract="True">
    <defaultFactionType>OG_Necron_Faction</defaultFactionType>
    <aiAvoidCover>true</aiAvoidCover>
    <destroyGearOnDrop>false</destroyGearOnDrop>
  </PawnKindDef>  
    
<!-- Necron Warrior -->
  <PawnKindDef ParentName="BaseNecronKind">
    <defName>OG_Necron_Warrior</defName>
    <label>necron warrior</label>
    <race>Necron_Warrior</race>
    <combatPower>100</combatPower>

    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/ToolUser/Necron/Warrior</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <color>(205,205,205)</color>
          <drawSize>1.75</drawSize>
          <shadowData>
            <volume>(0.4, 0.8, 0.4)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponMoney>
      <min>40000</min>
      <max>40000</max>
    </weaponMoney>
    <weaponTags>
      <li>OGN_Gun_NGaussFlayer</li>
    </weaponTags>
  </PawnKindDef>
  
